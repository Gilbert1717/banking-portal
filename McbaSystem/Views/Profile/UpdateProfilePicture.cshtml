@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Customer
@{
    ViewData["Title"] = "Update Profile Picture";
}

<h1 class="display-4">Update Profile Picture</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProfilePicture" enctype="multipart/form-data">
            <input type="hidden" asp-for="CustomerID" value="@Model.CustomerID"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Image" class="control-label"></label> *@
            @*     <input name="Image" class="form-control" type="file" accept="image/*"> *@
            @*     <span asp-validation-for="Image" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <input type="submit" value="Upload" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}