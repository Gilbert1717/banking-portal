@using Microsoft.AspNetCore.Mvc.TagHelpers
@model McbaSystem.ViewModels.Profile.UpdatePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h1 class="display-4">Change Password</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePassword">
            <input type="hidden" asp-for="Login.CustomerID" value="@Model.Login.CustomerID"/>
            <input type="hidden" asp-for="Login.PasswordHash" value="@Model.Login.PasswordHash"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Login.LoginID" class="control-label"></label>
                <input asp-for="Login.LoginID" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">Original Password</label>
                <input asp-for="OldPassword" type="password" class="form-control" value=""/>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" value=""/>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirm New Password</label>
                <input asp-for="PasswordConfirm" type="password" class="form-control" value=""/>
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Profile</a>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}