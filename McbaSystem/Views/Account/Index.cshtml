@model McbaSystem.ViewModels.Account.IndexViewModel
@{
    ViewData["Title"] = "Accounts";
}

<div>
    <h1 class="display-4">Welcome, @Model.Customer.Name</h1>

    <h3>Your Accounts</h3>
    <table class="table">
        <tr>
            <th>@Html.DisplayNameFor(x => x.Customer.Accounts[0].AccountNumber)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.Accounts[0].AccountType)</th>
            <th>@Html.DisplayNameFor(x => x.Customer.Accounts[0].Balance)</th>
            <th></th>
        </tr>
        @foreach (var account in Model.Customer.Accounts)
        {
            <tr>
                <td>@Html.DisplayFor(x => account.AccountNumber)</td>
                <td>@Html.DisplayFor(x => account.AccountType)</td>
                <td>@Html.DisplayFor(x => account.Balance)</td>
                @if (Model.Action != null)
                {
                    <td>
                        <a class="btn btn-sm btn-primary"
                           asp-action="@Model.Action" asp-route-id="@account.AccountNumber">
                            @Model.Action
                        </a>
                    </td>
                }

            </tr>
        }
    </table>
</div>