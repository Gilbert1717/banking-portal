@using Microsoft.AspNetCore.Mvc.TagHelpers
@model McbaSystem.ViewModels.Account.ActionViewModel
@{
    ViewData["Title"] = "Transfer";
}

<h1 class="display-4">Account Number @Model.Account.AccountNumber (@Model.Account.AccountType)</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Transfer">
            <input type="hidden" asp-for="Transaction.AccountNumber" value="@Model.Account.AccountNumber"/>
            <input type="hidden" asp-for="Transaction.TransactionType" value="@TransactionType.Transfer"/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control"/>
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.DestinationAccountNumber" class="control-label"></label>
                <input asp-for="Transaction.DestinationAccountNumber" class="form-control" required/>
                <span asp-validation-for="Transaction.DestinationAccountNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Comment" class="control-label"></label>
                <input asp-for="Transaction.Comment" class="form-control"/>
                <span asp-validation-for="Transaction.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Transfer" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-link="Transfer">Back to Accounts</a>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}